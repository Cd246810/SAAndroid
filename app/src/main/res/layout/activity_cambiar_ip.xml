<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christianescobar.myapplication.CambiarIP">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingrese la IP del ESB:" />

        <EditText
            android:id="@+id/txt_IP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="(escriba su nombre)"
            android:inputType="textPersonName"
            android:text="192.168.0." />

        <TextView
            android:id="@+id/txt_askNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingresa tu nombre:"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txt_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="(ingresa tu nombre)"
            android:inputType="textPersonName"
            android:text="Christian"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_askTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingresa tu número de tarjeta:"
            android:visibility="gone" />

        <EditText
            android:id="@+id/txt_Tarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="(ingresa tu nombre)"
            android:inputType="textPersonName"
            android:text="18273475"
            android:visibility="gone" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="enviarAPDF"
            android:text="Generar PDF" />

        <Button
            android:id="@+id/btn_Registro"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="registrar"
            android:text="Registrar"
            android:visibility="gone" />

        <Button
            android:id="@+id/lnk_InicioSesion"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="cambiarVista"
            android:text="Inicia Sesión..."
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
